<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="20dp"
    android:orientation="vertical"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bourymbodj.studyhack.schedule">

    <TextView
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:text="Enter your course name, its credit value and the amount of time you want to devote to it"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/course"
            android:text="Course"
            android:layout_width="170dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/credit"
            android:text="Credits"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/time"
                android:text="Time"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/course1"
        android:layout_width="170dp"
        android:layout_height="wrap_content" />
        <EditText
        android:id="@+id/credit1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/time1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/course2"
            android:layout_width="170dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/credit2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
        <EditText
            android:id="@+id/time2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/course3"
            android:layout_width="170dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/credit3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
        <EditText
            android:id="@+id/time3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/course4"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/credit4"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
        <EditText
            android:id="@+id/time4"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/course5"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/credit5"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/time5"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/course6"
            android:layout_width="170dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/credit6"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/time6"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/course7"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/credit7"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/time7"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >
    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save and continue" />
</LinearLayout>
</LinearLayout>
